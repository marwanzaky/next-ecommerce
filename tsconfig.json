{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"incremental": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@ui/*": ["./components/ui/*"],
			"@components/*": ["./components/*"],
			"@redux/*": ["redux/*"],
			"@services/*": ["./services/*"],
			"@utils/*": ["./utils/*"],
			"@data/*": ["./data/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"components/ui/ProductItem/index.js",
		"components/ui/Info/index.js",
		"components/footer/index.js"
	],
	"exclude": ["node_modules"]
}
